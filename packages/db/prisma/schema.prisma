generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String       @id @default(uuid()) @map("id") @db.Uuid
  username        String       @unique @map("username")
  displayName     String       @map("display_name")
  preferredLang   String       @map("preferred_lang")
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")
  chatMemberships ChatMember[]
  sentMessages    Message[]

  @@index([username])
  @@map("users")
}

model Chat {
  id        String       @id @default(uuid()) @map("id") @db.Uuid
  createdAt DateTime     @default(now()) @map("created_at")
  members   ChatMember[]
  messages  Message[]

  @@map("chats")
}

model ChatMember {
  chatId    String   @map("chat_id") @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")
  chat      Chat     @relation(fields: [chatId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@id([chatId, userId])
  @@map("chat_members")
}

model Message {
  id        String         @id @default(uuid()) @map("id") @db.Uuid
  chatId    String         @map("chat_id") @db.Uuid
  senderId  String         @map("sender_id") @db.Uuid
  contentId String         @unique @map("content_id") @db.Uuid
  isDeleted Boolean        @default(false) @map("is_deleted")
  createdAt DateTime       @default(now()) @map("created_at")
  updatedAt DateTime       @updatedAt @map("updated_at")
  chat      Chat           @relation(fields: [chatId], references: [id])
  content   MessageContent @relation(fields: [contentId], references: [id])
  sender    User           @relation(fields: [senderId], references: [id])

  @@index([chatId, createdAt(sort: Desc)])
  @@map("messages")
}

model MessageContent {
  id           String               @id @default(uuid()) @map("id") @db.Uuid
  originalLang String               @map("original_lang")
  text         String               @map("text")
  createdAt    DateTime             @default(now()) @map("created_at")
  updatedAt    DateTime             @updatedAt @map("updated_at")
  translations MessageTranslation[]
  messages     Message?

  @@map("message_contents")
}

model MessageTranslation {
  contentId      String         @map("content_id") @db.Uuid
  targetLang     String         @map("target_lang")
  translatedText String         @map("translated_text")
  createdAt      DateTime       @default(now()) @map("created_at")
  updatedAt      DateTime       @updatedAt @map("updated_at")
  content        MessageContent @relation(fields: [contentId], references: [id])

  @@id([contentId, targetLang])
  @@index([contentId])
  @@map("message_translations")
}
